    <title>CovidIndia-Stats</title>
</head>

<body>
    {{>header}}



    <div class="container" style="margin-top: 25px;">
        <div class="row">
            <div class="col-4 div-conf">
                <h6 class="text-center text-uppercase h6-1" style="">Confirmed</h6>
                <p id="conf" class="text-center p-update" style="color:#FFC107;"></p>
            </div>
            <div class="col-4 div-rec">
                <h6 class="text-center text-uppercase h6-2" style="">Recovered</h6>
                <p id="recover" class="text-center p-update" style="color: #27A243;"></p>
            </div>
            <div class="col-4 div-dec">
                <h6 class="text-center text-uppercase h6-3" style="">Deceased</h6>
                <p id="dec" class="text-center p-update" style="color:#DC3545;"></p>
            </div>
        </div>
    </div>
    <div class="container line-1 chart-container line-color-1" style="margin-top: 25px;">

        <canvas id="line1"></canvas>

    </div>
    <div class="container" style="margin-top: 50px;">
        <div class="row">
            <div class="col-md-6 chart-container" style="padding-left: 0;">

                <canvas id="line2" class="line-color-2"></canvas>

            </div>

            <div class="col-md-6 chart-container" style="padding-right: 0;">

                <canvas id="line3" class="line-color-3"></canvas>

            </div>
        </div>
    </div>
    <div class="container bar-container bar-color-1" style="margin-top: 50px;margin-bottom: 25px;">

        <canvas id="bar1"></canvas>

    </div>
